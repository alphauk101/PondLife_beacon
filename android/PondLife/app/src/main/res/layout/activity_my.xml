<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MyActivity"
    android:background="@android:color/black">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/lyo_enabled"
        android:background="@drawable/bubble"
        android:gravity="center">

            <TextView
                android:id="@+id/txt_Waiting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Updating..."
                android:textSize="35dp"
                android:paddingTop="40dp"
                android:paddingBottom="40dp"
                android:textColor="@android:color/white"
                />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Touch to change."
            android:id="@+id/textView"
            android:layout_gravity="right"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lyo_enabled"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:id="@+id/lyo_temp"
        android:background="@drawable/fish">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Temp"
            android:textSize="35dp"
            android:paddingTop="40dp"
            android:paddingBottom="40dp"
            android:textColor="@android:color/white"
            android:id="@+id/txt_temperature"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lyo_temp"
        android:layout_centerHorizontal="true"
        android:id="@+id/lyo_status"
        android:background="@drawable/stone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Status"
            android:textSize="35dp"
            android:paddingTop="40dp"
            android:paddingBottom="40dp"
            android:textColor="@android:color/white"
            android:id="@+id/txt_status"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lyo_lastHit"
        android:layout_below="@+id/lyo_status"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/jelly">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Last Seen"
            android:textSize="35dp"
            android:paddingTop="40dp"
            android:paddingBottom="40dp"
            android:textColor="@android:color/white"
            android:id="@+id/txt_lasthit"
            android:layout_gravity="center_horizontal" />


        </LinearLayout>
</RelativeLayout>
